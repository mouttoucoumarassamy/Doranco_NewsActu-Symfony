{% extends 'base.html.twig' %}

{% block body %}

    {% if category is not defined %}
        <h1 class="text-center mt-3">Ajouter une catégorie</h1>
    {% else %}
        <h1 class="text-center mt-3">Modifier la catégorie {{ category.name }}</h1>
    {% endif %}

    <div class="row">
        <div class="col-4 mx-auto my-5">
            {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}

                <div class="shadow">
                    {{ form_row(form.name) }}
                </div>

                {% if category is not defined %}
                    <button type="submit" class="d-block col-4 mx-auto my-3 btn btn-warning">Ajouter</button>
                {% else %}
                    <button type="submit" class="d-block col-4 mx-auto my-3 btn btn-warning">Modifier</button>
                {% endif %}

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}

