home.html.twig


{% extends 'base.html.twig' %}

{% block body %}
	<h1 class='text-center my-3'>Filmothèque</h1>

	<h3 class='text-center my-3'>Tous les films</h3>

	<div class="row">
		<div class="col-12">
			<table class='table'>
				<thead>
					<tr>
						<th>Titre</th>
						<th>Réalisateur</th>
						<th>Résumé</th>
						<th>Durée</th>
						<th>Année de sortie</th>
					</tr>
				</thead>

                <tbody>                
                {% for film in films %}
                    <tr>
                        <td>{{ film.titre }}</td>
                        <td>{{ film.realisateur }}</td>
                        <td>{{ film.resume }}</td>
                        <td>{{ film.Duree }}</td>
                        <td>{{ film.anneeSortie | date('d/m/Y') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
			</table>
		</div>
	</div>
{% endblock %}